    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.0.10",
        "@types/semver": "^7.7.0",
        "type-fest": "^4.41.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "commander": "^14.0.0",
        "semver": "^7.7.2",
        "workspace-tools": "^0.38.4"
    }
}
